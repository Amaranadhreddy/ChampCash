<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="1dp">

            <TextView
                android:text="@string/text_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_weight=".70"
                style="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_weight=".05"
                style="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewMobileNumber1"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                android:text=""
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="1dp">

            <TextView
                android:text="@string/text_operator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_weight=".70"
                style="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_weight=".05"
                style="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="16sp"
                android:layout_weight="1"
                style="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/textViewOperator1"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="1dp">

            <TextView
                android:text="@string/text_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_weight=".70"
                style="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_weight=".05"
                style="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="16sp"
                android:layout_weight="1"
                style="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/textViewAmount1"/>

        </TableRow>

    </TableLayout>

</LinearLayout>